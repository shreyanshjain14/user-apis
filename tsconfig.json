{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/control-panel": ["apps/control-panel/src"],
      "@app/control-panel/*": ["apps/control-panel/src/*"],
      "@config/*": ["config/*"],
      "@libs/core": ["libs/core/src"],
      "@libs/core/*": ["libs/core/src/*"],
      "@libs/database": ["libs/database/src"],
      "@libs/database/*": ["libs/database/src/*"],
      "@libs/users": ["libs/users/src"],
      "@libs/users/*": ["libs/users/src/*"],
      "@libs/common": ["libs/common/src"],
      "@libs/common/*": ["libs/common/src/*"]
    }
  },
  "exclude": ["node_modules", "dist","globals.d.ts", "lib.dom.d.ts"]
}
